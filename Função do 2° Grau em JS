function segundoGrau(){
let a = prompt("Diga quem é a: ")
let b = prompt("Diga quem é b : ")
let c = prompt("Diga quem é c : ")

function delta(a, b, c){
  return delta = Math.pow(b) - 4 * a * c
}
resultadoDelta = delta(a, b, c)
console.log("delta é: "+ resultadoDelta)

raiz = (- b + Math.sqrt(resultadoDelta))/(2*a)
raiz2 = (- b - Math.sqrt(resultadoDelta))/(2*a)


console.log("As raízes da sua função é: "+ raiz + ", " + raiz2)

}
segundoGrau()
