function delta(a, b, c){
  return (Math.pow(b,2)) - 4 * a * c
}


function segundoGrau(){
let a = Number(prompt("Diga quem é a: "))
let b = Number(prompt("Diga quem é b : "))
let c = Number(prompt("Diga quem é c : "))

let d = delta(a,b,c) 

raiz = (- b + Math.sqrt(d))/(2*a)
raiz2 = (- b - Math.sqrt(d))/(2*a)


console.log("As raízes da sua função é: "+ raiz + ", " + raiz2)

}
segundoGrau()
